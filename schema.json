{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://raw.githubusercontent.com/Yash-Singh1/vscode-snippets-json-schema/main/schema.json",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "properties": {
      "prefix": {
        "oneOf": [
          {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          {
            "type": "string"
          }
        ]
      },
      "body": {
        "oneOf": [
          {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          {
            "type": "string"
          }
        ]
      },
      "description": {
        "type": "string"
      },
      "scope": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": ["prefix", "body"]
  }
}
